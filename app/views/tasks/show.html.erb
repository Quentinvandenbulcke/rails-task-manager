<h1><%= @task.title %></h1>
<p><%= @task.details %> </p>
<p>
  <% if @task.completed == true %>
    <input type="checkbox" class="form-check-input me-2" checked>
    <%= "The task is completed" %>
  <% else %>
    <input type="checkbox" class="form-check-input me-2" >
    <%= "The task is not completed yet" %>
  <% end %>
</p>
<%= link_to raw('<i class="fa-solid fa-arrow-rotate-left"></i> &nbsp; Back to list'), tasks_path, class: "btn btn-primary my-2" %>
<%= link_to raw('<i class="fa-regular fa-pen-to-square"></i> &nbsp; Edit task'), edit_task_path, class: "btn btn-primary my-2" %>
